<Window x:Class="TaskManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер задач" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        TextElement.Foreground="#333333">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтрации -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Мои задачи" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#4CAF50"
                           Margin="0,0,0,10"/>
                <WrapPanel Margin="0,5,0,0">
                    <Label Content="Приоритет:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="comboPriorityFilter" 
                              Width="120" Margin="5,0" 
                              Height="32"
                              Background="White"
                              BorderBrush="#B0BEC5"
                              BorderThickness="1"
                              Padding="8,5"
                              FontSize="14"
                              VerticalContentAlignment="Center"
                              SelectedIndex="-1"/>

                    <Label Content="Категория:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="comboCategoryFilter" 
                              Width="120" Margin="5,0"
                              Height="32"
                              Background="White"
                              BorderBrush="#B0BEC5"
                              BorderThickness="1"
                              Padding="8,5"
                              FontSize="14"
                              VerticalContentAlignment="Center"/>

                    <CheckBox x:Name="chkShowCompleted" 
                              Content="Выполненные" 
                              VerticalAlignment="Center" 
                              Margin="15,0,0,0"/>

                    <Button x:Name="btnApplyFilter" 
                            Content="Применить" 
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#4CAF50"
                            FontSize="14"
                            Padding="15,5"
                            Cursor="Hand"
                            Margin="10,0,0,0"
                            Click="btnApplyFilter_Click"/>

                    <Button x:Name="btnResetFilter" 
                            Content="Сброс" 
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#4CAF50"
                            FontSize="14"
                            Padding="15,5"
                            Cursor="Hand"
                            Margin="5,0,0,0"
                            Click="btnResetFilter_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Список задач -->
        <ListView x:Name="listViewTasks" 
                  Grid.Row="1" 
                  Background="White"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="0,0,0,10"
                  AlternationCount="2">
            <ListView.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
            </ListView.Effect>
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="#FAFAFA"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F0F0"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#81C784"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" 
                                           FontWeight="SemiBold"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Срок" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DueDate, StringFormat={}{0:dd MMM yyyy}}" 
                                           Foreground="{Binding DueDateColor}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Категория" Width="120"
                                    DisplayMemberBinding="{Binding Category.Name}"/>

                    <GridViewColumn Header="Приоритет" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" 
                                        Background="{Binding PriorityColor}"
                                        Padding="6,2">
                                    <TextBlock Text="{Binding Priority}" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               FontSize="11"
                                               FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Изменённая колонка статуса с активным чекбоксом -->
                    <GridViewColumn Header="Статус" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          HorizontalAlignment="Center"
                                          Click="CheckBox_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Панель кнопок управления -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnAdd" 
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,8"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="5"
                        Click="btnAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Добавить"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnEdit" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#4CAF50"
                        FontSize="14"
                        Padding="12,8"
                        Cursor="Hand"
                        Margin="5"
                        Click="btnEdit_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✏️" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Изменить"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnDelete" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#F44336"
                        FontSize="14"
                        Padding="12,8"
                        Cursor="Hand"
                        Margin="5"
                        Click="btnDelete_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑️" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Удалить"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="TaskManagerWPF.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle, RelativeSource={RelativeSource Self}}" 
        Height="450" Width="450" 
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        TextElement.Foreground="#333333"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

    <Border Background="White" CornerRadius="8" Margin="10" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#4CAF50"
                       Margin="0,0,0,15"/>

            <!-- Название -->
            <Label Grid.Row="1" Grid.Column="0" Content="Название:" 
                   FontWeight="SemiBold" Margin="0,5,0,0"/>
            <TextBox x:Name="txtTitle" Grid.Row="1" Grid.Column="1" 
                     Height="32"
                     Background="White"
                     BorderBrush="#B0BEC5"
                     BorderThickness="1"
                     Padding="8,5"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Margin="5"/>

            <!-- Описание -->
            <Label Grid.Row="2" Grid.Column="0" Content="Описание:" 
                   FontWeight="SemiBold" Margin="0,5,0,0"/>
            <TextBox x:Name="txtDescription" Grid.Row="2" Grid.Column="1" 
                     Height="60"
                     Background="White"
                     BorderBrush="#B0BEC5"
                     BorderThickness="1"
                     Padding="8,5"
                     FontSize="14"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     Margin="5"/>

            <!-- Срок -->
            <Label Grid.Row="3" Grid.Column="0" Content="Срок:" 
                   FontWeight="SemiBold" Margin="0,5,0,0"/>
            <DatePicker x:Name="datePickerDue" Grid.Row="3" Grid.Column="1" 
                        Height="32"
                        Background="White"
                        BorderBrush="#B0BEC5"
                        BorderThickness="1"
                        Padding="8,5"
                        FontSize="14"
                        SelectedDate="{Binding DueDate}" 
                        Margin="5"/>

            <!-- Категория -->
            <Label Grid.Row="4" Grid.Column="0" Content="Категория:" 
                   FontWeight="SemiBold" Margin="0,5,0,0"/>
            <ComboBox x:Name="comboCategory" Grid.Row="4" Grid.Column="1" 
                      Height="32"
                      Background="White"
                      BorderBrush="#B0BEC5"
                      BorderThickness="1"
                      Padding="8,5"
                      FontSize="14"
                      DisplayMemberPath="Name" 
                      Margin="5"/>

            <!-- Приоритет -->
            <Label Grid.Row="5" Grid.Column="0" Content="Приоритет:" 
                   FontWeight="SemiBold" Margin="0,5,0,0"/>
            <ComboBox x:Name="comboPriority" Grid.Row="5" Grid.Column="1" 
                      Height="32"
                      Background="White"
                      BorderBrush="#B0BEC5"
                      BorderThickness="1"
                      Padding="8,5"
                      FontSize="14"
                      Margin="5"/>

            <!-- Выполнено -->
            <CheckBox x:Name="chkIsCompleted" Grid.Row="6" Grid.Column="1" 
                      Content="Задача выполнена" 
                      Margin="5,10,5,5"
                      FontSize="14"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,8"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✔️" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Сохранить"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnCancel" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#F44336"
                        FontSize="14"
                        Padding="20,8"
                        Cursor="Hand"
                        Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖️" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Отмена"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>